---
import { languages, getLangFromUrl } from '../i18n.js';
const { url = new URL('http://localhost/') } = Astro.props;
const lang = getLangFromUrl(url);
const t = languages[lang];
---
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{t.siteName}</title>
    <meta name="description" content="{t.heroSubtitle}" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-cream text-cacao font-body min-h-screen flex flex-col">
    <header class="w-full py-4 px-6 flex items-center justify-between bg-chocolate text-cream shadow-md">
      <div class="text-2xl font-display tracking-wide">{t.siteName}</div>
      <nav class="flex gap-6 text-lg">
        <a href={lang === 'es' ? '/' : '/en/'} class="hover:text-gold transition">{t.home}</a>
        <a href={lang === 'es' ? '/tours' : '/en/tours'} class="hover:text-gold transition">{t.tours}</a>
        <a href={lang === 'es' ? '/about' : '/en/about'} class="hover:text-gold transition">{t.about}</a>
        <a href={lang === 'es' ? '/gallery' : '/en/gallery'} class="hover:text-gold transition">{t.gallery}</a>
        <a href={lang === 'es' ? '/contact' : '/en/contact'} class="hover:text-gold transition">{t.contact}</a>
      </nav>
      <a href={lang === 'es' ? '/en' : '/'} class="ml-4 px-3 py-1 rounded bg-gold text-cacao font-semibold hover:bg-leaf hover:text-cream transition">{t.switchLang}</a>
    </header>
    <main class="flex-1 flex flex-col">
      <slot />
    </main>
    <footer class="w-full bg-chocolate text-cream py-6 px-6 mt-10 flex flex-col md:flex-row items-center justify-between text-sm">
      <div>© {new Date().getFullYear()} Rancho Raíces. {lang === 'es' ? 'Todos los derechos reservados.' : 'All rights reserved.'}</div>
      <div>
        Puerto Jiménez, Península de Osa, Costa Rica
      </div>
    </footer>
  </body>
</html>
