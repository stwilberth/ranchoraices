---
import Layout from '../components/Layout.astro';
import { languages } from '../i18n.js';
const lang = 'es';
const t = languages[lang];
---

<Layout url={Astro.url}>
  <section class="py-16 px-4 md:px-0 max-w-3xl mx-auto">
    <h1 class="font-display text-3xl md:text-5xl text-amber-900 mb-6">{t.contact}</h1>
    <p class="text-lg text-gray-800 mb-6">¿Quieres reservar un tour o tienes preguntas? ¡Contáctanos!</p>
    <form class="bg-amber-50 rounded-xl shadow p-6 border border-green-500 flex flex-col gap-4" name="contact" method="POST" data-netlify="true">
      <input type="hidden" name="form-name" value="contact" />
      <label class="text-gray-800 font-semibold">
        Nombre
        <input name="name" class="block w-full mt-1 p-2 rounded border border-amber-300 focus:border-green-500 focus:outline-none" required />
      </label>
      <label class="text-gray-800 font-semibold">
        Email
        <input name="email" type="email" class="block w-full mt-1 p-2 rounded border border-amber-300 focus:border-green-500 focus:outline-none" required />
      </label>
      <label class="text-gray-800 font-semibold">
        Mensaje
        <textarea name="message" class="block w-full mt-1 p-2 rounded border border-amber-300 focus:border-green-500 focus:outline-none" rows="4" required></textarea>
      </label>
      <button type="submit" class="bg-amber-400 text-amber-900 font-bold px-6 py-2 rounded hover:bg-green-600 hover:text-white transition mt-2">Enviar</button>
    </form>
    <div class="mt-8 text-gray-800">
      <p><strong>WhatsApp:</strong> <a href="https://wa.me/50686328150" class="text-green-600 underline">+506 8632 8150</a> / <a href="https://wa.me/50686030464" class="text-leaf underline">+506 8603 0464</a></p>
      <p><strong>Email:</strong> <a href="mailto:osacacao@gmail.com" class="text-green-600 underline">osacacao@gmail.com</a></p>
      <p><strong>Ubicación:</strong> Puerto Jiménez, Península de Osa, Costa Rica</p>
    </div>
  </section>
</Layout>
