---
import Layout from '../../components/Layout.astro';
import { languages } from '../../i18n.js';
const lang = 'en';
const t = languages[lang];
---

<Layout url={Astro.url}>
  <section class="py-16 px-4 md:px-0 max-w-4xl mx-auto">
    <h1 class="font-display text-3xl md:text-5xl text-chocolate mb-6">{t.tours}</h1>
    <p class="text-lg text-cacao mb-6">Discover our artisanal chocolate tours and enjoy the full Rancho Ra√≠ces farm experience.</p>
    <div class="grid gap-8 md:grid-cols-2">
      <div class="bg-cream rounded-xl shadow p-6 border border-gold">
        <h2 class="font-display text-2xl text-chocolate mb-2">Cacao Tour</h2>
        <ul class="mb-2 text-cacao text-base list-disc list-inside">
          <li>Duration: 2-2.5 hours</li>
          <li>Price: $40 USD per person</li>
          <li>Includes farm walk, tastings, hands-on activities</li>
        </ul>
        <a href="/en/contact" class="inline-block mt-2 px-6 py-2 rounded bg-gold text-cacao font-semibold hover:bg-leaf hover:text-cream transition">Book now</a>
      </div>
      <div class="bg-cream rounded-xl shadow p-6 border border-gold">
        <h2 class="font-display text-2xl text-chocolate mb-2">Full Day Tour</h2>
        <ul class="mb-2 text-cacao text-base list-disc list-inside">
          <li>Duration: 6-8 hours</li>
          <li>Price: $95 USD per person</li>
          <li>Includes cacao tour, lunch, waterfall, wine tasting</li>
        </ul>
        <a href="/en/contact" class="inline-block mt-2 px-6 py-2 rounded bg-gold text-cacao font-semibold hover:bg-leaf hover:text-cream transition">Book now</a>
      </div>
    </div>
    <div class="mt-10 text-cacao">
      <h3 class="font-display text-xl text-chocolate mb-2">Why choose us?</h3>
      <ul class="list-disc list-inside">
        <li>Authentic rural experience</li>
        <li>Expert guides and family hospitality</li>
        <li>Focus on sustainability and permaculture</li>
        <li>Perfect for families, couples, and groups</li>
      </ul>
    </div>
  </section>
</Layout>
