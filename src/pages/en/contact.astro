---
import Layout from '../../components/Layout.astro';
import { languages } from '../../i18n.js';
const lang = 'en';
const t = languages[lang];
---

<Layout url={Astro.url}>
  <section class="py-16 px-4 md:px-0 max-w-3xl mx-auto">
    <h1 class="font-display text-3xl md:text-5xl text-amber-900 mb-6">{t.contact}</h1>
    <p class="text-lg text-gray-800 mb-6">Want to book a tour or have questions? Contact us!</p>
    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-amber-900 text-amber-50 rounded-xl p-6 shadow-lg">
        <h2 class="text-2xl font-display mb-4">Direct Contact</h2>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <i class="fab fa-whatsapp text-2xl mr-2"></i>
            <div>
              <h3 class="font-semibold">WhatsApp</h3>
              <a href="https://wa.me/50686394010" class="text-amber-200 hover:text-white text-lg font-medium block mt-1">+506 8639 4010</a>
              <p class="text-amber-100 text-sm mt-1">Quick response</p>
            </div>
          </div>
          
          <div class="flex items-start gap-3 pt-4 border-t border-amber-800">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <div>
              <h3 class="font-semibold">Email</h3>
              <a href="mailto:info@ranchoraices.com" class="text-amber-200 hover:text-white text-lg font-medium block mt-1">info@ranchoraices.com</a>
              <p class="text-amber-100 text-sm mt-1">Response within 24 hours</p>
            </div>
          </div>
          
          <div class="flex items-start gap-3 pt-4 border-t border-amber-800">
            <svg class="w-6 h-6 mt-1 text-amber-400" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
            <div>
              <h3 class="font-semibold">Location</h3>
              <p class="text-amber-100 mt-1">Puerto Jim√©nez,<br>Osa Peninsula,<br>Costa Rica</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="bg-amber-50 rounded-xl p-6 shadow-lg border border-green-500 flex flex-col gap-6">
        <h2 class="text-2xl font-display text-amber-900">Opening Hours</h2>
        <ul class="space-y-3 text-gray-800">
          <li class="flex justify-between pb-2 border-b border-amber-200">
            <span>Monday to Friday:</span>
            <span class="font-medium">8:00 AM - 2:00 PM</span>
          </li>
          <li class="flex justify-between pb-2 border-b border-amber-200">
            <span>Saturdays:</span>
            <span class="font-medium">8:00 AM - 2:00 PM</span>
          </li>
          <li class="flex justify-between">
            <span>Sundays:</span>
            <span class="font-medium">Closed</span>
          </li>
        </ul>
      </div>
    </div>
  </section>
</Layout>
