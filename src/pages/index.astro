---
import Layout from '../components/Layout.astro';
import { languages, getLangFromUrl } from '../i18n.js';
const { url = Astro.url } = Astro.props;
const lang = getLangFromUrl(url);
const t = languages[lang];
---

<Layout url={url}>
  <section class="relative flex flex-col items-center justify-center min-h-[70vh] text-center bg-gradient-to-b from-chocolate via-cacao to-cream">
    <div class="absolute inset-0 bg-leaf opacity-10 pointer-events-none" style="background-image: url('/leaves-bg.svg'); background-repeat: repeat;"></div>
    <div class="relative z-10 py-16 px-4 md:px-0">
      <h1 class="font-display text-4xl md:text-6xl text-gold drop-shadow-lg mb-6 animate-fade-in">
        {t.heroTitle}
      </h1>
      <p class="text-xl md:text-2xl text-cream mb-8 animate-fade-in delay-200">
        {t.heroSubtitle}
      </p>
      <a href={lang === 'es' ? '/tours' : '/en/tours'} class="inline-block px-8 py-4 rounded-lg bg-gold text-cacao font-bold text-lg shadow-lg hover:bg-leaf hover:text-cream transition animate-fade-in delay-400">
        {t.cta}
      </a>
    </div>
  </section>
  <section class="py-12 px-4 md:px-0 max-w-3xl mx-auto animate-fade-in-up">
    <h2 class="font-display text-2xl md:text-3xl text-chocolate mb-4">{lang === 'es' ? 'Bienvenido a Rancho Raíces' : 'Welcome to Rancho Raíces'}</h2>
    <p class="text-lg text-cacao mb-4">
      {lang === 'es'
        ? 'Un lugar donde el chocolate orgánico, la naturaleza y la cultura costarricense se unen para una experiencia inolvidable. Descubre nuestros tours, aprende sobre permacultura y vive la magia de la Península de Osa.'
        : 'A place where organic chocolate, nature, and Costa Rican culture come together for an unforgettable experience. Discover our tours, learn about permaculture, and experience the magic of the Osa Peninsula.'}
    </p>
    <ul class="list-disc list-inside text-cacao text-base">
      <li>{lang === 'es' ? 'Tours de cacao y chocolate artesanal' : 'Cacao and chocolate tours'}</li>
      <li>{lang === 'es' ? 'Experiencias sostenibles y rurales' : 'Sustainable rural experiences'}</li>
      <li>{lang === 'es' ? 'Observación de fauna y flora tropical' : 'Wildlife & tropical flora observation'}</li>
      <li>{lang === 'es' ? 'Almuerzos típicos y catas' : 'Traditional lunches & tastings'}</li>
    </ul>
  </section>
</Layout>
